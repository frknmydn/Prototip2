<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PostSearchResultDetailActivity.FragmentPostSearchResultQuestions">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragmentPostSearchResultQuestionsRCL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="75dp" />

    <Button
        android:id="@+id/fragmentPostSearchResultQuestionsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="35dp"
        android:text="SORU SOR" />
</FrameLayout>
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/questionsRCLRowQuestionOwner"
        android:layout_width="111dp"
        android:layout_height="18dp"
        android:layout_marginStart="60dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/questionsRCLRowQuestion" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="İlan Sahibinin Cevabı:"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionsRCLRowQuestionOwner" />

    <TextView
        android:id="@+id/questionsRCLRowAnswer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="DENEME DENDME DENDEMDEDEDENDEDED EDNED EDED EDE DEJDE DED EDJED EDJE DEJDE DEJDE DE"

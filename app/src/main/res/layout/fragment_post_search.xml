<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.PostActivity.PostSearchFragment">

    <Spinner
        android:id="@+id/spinnerSearchCityFS"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/spinner_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView30" />

    <Spinner
        android:id="@+id/spinnerSearchGenderFS"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSearchCityFS"
        app:layout_constraintStart_toEndOf="@+id/textView19"
        app:layout_constraintTop_toTopOf="@+id/textView19"
        android:background="@drawable/spinner_shape"/>

    <EditText
        android:id="@+id/edtSearchDateFS"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/spinner_shape"
        android:ems="10"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="Tarih"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerSearchGenderFS"
        app:layout_constraintStart_toEndOf="@+id/textView26"
        app:layout_constraintTop_toTopOf="@+id/textView26" />

    <EditText
        android:id="@+id/edtSearchTime2FS"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_shape"
        android:ems="10"
        android:focusable="false"
        android:hint="Bitiş Saati"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/edtSearchDateFS"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/edtSearchDateFS" />

    <EditText
        android:id="@+id/edtSearchTime1FS"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_shape"
        android:ems="10"
        android:focusable="false"
        android:hint="Başlangıç Saati"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/textView29"
        app:layout_constraintStart_toStartOf="@+id/textView26"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <Button
        android:id="@+id/btnSearchPost"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:background="#E1E1E1"
        android:fontFamily="sans-serif-black"
        android:text="ARA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="Şehir"
        android:textColor="#5C5C5C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinnerSearchCityFS" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="Cinsiyet"
        android:textColor="#5C5C5C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center_vertical"
        android:text="Tarih"
        android:textColor="#5C5C5C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center|center_vertical"
        android:text="-"
        android:textColor="#5C5C5C"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/edtSearchTime1FS"
        app:layout_constraintStart_toEndOf="@+id/edtSearchTime2FS"
        app:layout_constraintTop_toTopOf="@+id/edtSearchTime2FS" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#E6E9FF"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="UYGUN İLAN BİLGİLERİ"
        android:textColor="#5C5C5C"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerSearchCityFS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
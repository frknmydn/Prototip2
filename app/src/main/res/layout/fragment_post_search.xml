<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PostSearchFragment">

    <Spinner
        android:id="@+id/spinnerSearchCityFS"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="150dp" />

    <Spinner
        android:id="@+id/spinnerSearchGenderFS"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="250dp" />

    <EditText
        android:id="@+id/edtSearchDateFS"
        android:layout_width="198dp"
        android:layout_height="45dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="340dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Tarih"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtSearchTime1FS"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="430dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Saat"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edtSearchTime2FS"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="430dp"
        android:ems="10"
        android:focusable="false"
        android:hint="Saat"
        android:inputType="textPersonName"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btnSearchPost"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="530dp"
        android:text="ARA" />
</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnrequestsToMeRowRCLDecline"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:text="Reddet"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/btnrequestsToMeRowRCLAccept"
        app:layout_constraintTop_toTopOf="@+id/btnrequestsToMeRowRCLAccept" />

    <TextView
        android:id="@+id/requestsToMeRowRCLHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:inputType="textMultiLine"
        android:text="SURADAN SURAYA SÖYLE BÖYLE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/requestsToMeRowRCLImg"
        android:layout_width="125sp"
        android:layout_height="125sp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestsToMeRowRCLHeader"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/requestsToMeRowRCLNameSurname"
        android:layout_width="164dp"
        android:layout_height="18dp"
        android:layout_marginTop="40dp"
        android:text="Erman Kan Derici"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toEndOf="@+id/requestsToMeRowRCLImg"
        app:layout_constraintTop_toBottomOf="@+id/requestsToMeRowRCLHeader" />

    <TextView
        android:id="@+id/requestsToMeRowRCLGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Erkek"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toEndOf="@+id/requestsToMeRowRCLImg"
        app:layout_constraintTop_toBottomOf="@+id/requestsToMeRowRCLNameSurname" />

    <Button
        android:id="@+id/btnrequestsToMeRowRCLAccept"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Onayla"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/requestsToMeRowRCLImg"
        app:layout_constraintTop_toBottomOf="@+id/requestsToMeRowRCLGender" />

    <View
        android:id="@+id/divider5"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requestsToMeRowRCLImg" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#4F011F2C" />
            <stroke
                android:width="1dp"
                android:color="#CF3606"
                />
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:radius="60dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#540387C3"
                android:endColor="#FFFFFF"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#FAFBFB" />
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:radius="60dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
</selector>